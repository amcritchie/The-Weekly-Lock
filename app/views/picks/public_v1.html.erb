<!-- Pager Content -->
<div class="container">

  <div class="row">

    <div class="col-md-3 col-sm-3 col-xs-6" style="text-align: center;">
      <div class="box pick_thumb season">
        <!-- Season Picks -->
        <!-- <h5>This Season's Picks</h5> -->
        <h5>Picks this season</h5>
        <h4>3 - 1</h4>

      </div>
    </div>

    <% @last_three.each_with_index do |pick, index| %>
    <div class="col-md-3 col-sm-3 col-xs-6 <%= (index != 2) ? 'hidden-xs' : '' %>" style="text-align: center;">
      <% if pick %>
      <a class="remove-decoration" href="/sport/nfl/season/2015/week/<%= pick.performance.game.week.position %>/public">
      <div class="box pick_thumb <%= (index == 1) ? 'loser' : 'winner' %>">
        <h5>
          Week <%= pick.performance.game.week.position %>
          <img style="display: inline;" class="img-responsive img-rounded" src="<%= pick.performance.team.logo_url(:micro) %>" alt="">
          <span> ( <%= pick.performance.spread %> )</span>
        </h5>
        <div>
          <div class="result">
            <%= (index == 1) ? 'Loss' : 'Win' %>
          </div>
        </div>
      </div>
      </a>
      <% end %>

    </div>
    <% end %>
  </div>

