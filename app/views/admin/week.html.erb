<div class="container">
  <!-- Add actions -->
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <!-- <h4>Actions</h4> -->
      <a id="build_seasons_matchups" class="btn btn-success">Build Matchups</a>
      <a id="build_seasons_results" class="btn btn-success">Build Results</a>
    </div>
    <br><br>
  </div>
  <div class="row">
    <!-- Page Title -->
    <div class="col-md-7 col-lg-6">
      <h1 style="margin-top: 10px;">Select your lock of the week.</h1>
    </div>
    <!-- Matchups filter -->
    <div class="col-xs-12 col-md-5 col-lg-6" style="margin-top: 12px; margin-bottom: 10px;">
      <%= render :template => "matchups/filter" %>
    </div>
  </div>
  <!-- Matchups -->
  <div class="row">
    <ul class="flex-container searchable">
      <% @week.games.each do |game| %>
      <li class="flex-item game-box">
        <%= render :template => "matchups/matchup", :locals => { :game => game, show_result: true, show_spread: true, show_pick: true } %>
      </li>
      <% end %>
      <%= render :template => "matchups/confirm_pick" %>
    </ul>
  </div>
</div>
